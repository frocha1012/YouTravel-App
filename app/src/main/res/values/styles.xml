<resources>
    <!-- Define your custom EditText style -->
    <style name="CustomEditTextStyle">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColorHint">@color/textColorPrimary</item>
        <item name="android:backgroundTint">@color/background</item>
    </style>


    <style name="DescriptionTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/front_descriptionApp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">80dp</item>
        <item name="android:layout_marginEnd">80dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <!-- Define your custom Button style -->
    <style name="CustomButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/buttonTextPrimary</item>
        <item name="android:padding">16dp</item>
        <item name="android:backgroundTint">@color/buttonColorPrimary</item>
    </style>

    <!-- res/values/styles.xml -->
    <style name="BottomNavigationTheme" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">30dp</item> <!-- Set icon size to 1.5x of default size (usually around 24dp) -->
    </style>

</resources>
